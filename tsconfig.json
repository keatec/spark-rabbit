{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitThis": true
    },
    "exclude": [
        "dist",
        "node_modules"
    ],
    "include": [
        "src"
    ]
}